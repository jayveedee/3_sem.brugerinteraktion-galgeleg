<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hangman"
    tools:context=".HovedMenu">

    <TextView
        android:id="@+id/tHangman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="600dp"
        android:fontFamily="@font/cormorant_upright_light"
        android:text="Hangman"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bStart"
        android:layout_width="190dp"
        android:layout_height="65dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="474dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="120dp"
        android:background="#3A383D"
        android:fontFamily="@font/cormorant_upright_light"
        android:text="Start"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tDescription"
        android:layout_width="350dp"
        android:layout_height="76dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="557dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/cormorant_upright_light"
        android:text="Are you sure you want to play this game?"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>