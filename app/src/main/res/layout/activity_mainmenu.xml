<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bak_mm"
    tools:context=".MainMenu">

    <TextView
        android:id="@+id/tHangman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="452dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="124dp"
        android:fontFamily="@font/cormorant_upright_light"
        android:text="Hangman"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bStart"
        android:layout_width="190dp"
        android:layout_height="65dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="557dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#37C70808"
        android:fontFamily="@font/cormorant_upright_light"
        android:text="start"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/iStats"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="564dp"
        android:layout_marginEnd="345dp"
        android:layout_marginBottom="45dp"
        android:clickable="true"
        android:contentDescription="statistik_knap"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_statistics_foreground"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/iAbout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="345dp"
        android:layout_marginTop="565dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="44dp"
        android:background="@mipmap/ic_about_foreground"
        android:contentDescription="help icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>